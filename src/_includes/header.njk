<header class="container">
  <nav>
    <ul>
      <li>
        <a href={{ "/" }}>{{ metadata.author.name }}</a>
      </li>
    </ul>
    <ul>
      {%- for entry in collections.all | eleventyNavigation %}
        <li>
          <a href="{{ entry.url }}"
            {% if entry.url == page.url %}
              aria-current="page"
            {% endif %}>
            {{ entry.title }}
          </a>
        </li>
      {%- endfor %}
    </ul>
    <ul>
      <li>
        <a href="/search" title="Search"><i class="fa-solid fa-magnifying-glass header-icon"></i></a>
        <!-- Dark Mode Toggle -->
        <button class="dark-mode-toggle" id="darkModeToggle" title="Dark/Light Mode">
          <i class="fa-solid fa-sun light-icon"></i>
          <i class="fa-solid fa-moon dark-icon"></i>
        </button>
      </li>
    </ul>
  </nav>
</header>
